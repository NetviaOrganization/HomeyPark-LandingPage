<footer class="bg-white py-12 px-4 max-md:py-6">
  <div class="max-w-6xl mx-auto grid grid-cols-2 md:grid-cols-5 gap-6">
    <div class="col-span-2 md:col-span-1 max-md:flex max-md:justify-center">
      <img
        src="https://i.ibb.co/BPb408Z/image-3.png"
        alt="HomeyPark Logo"
        class="w-[166px] h-[60px] mb-4 max-lg:w-32 max-lg:h-auto"
      />
      <p class="text-gray-600 max-lg:text-xs">
        &copy; Copyright Â© 2024 by HomeyPark, Inc. <br />
        All rights reserved
      </p>
    </div>

    {
      footerLinks.map((section) => (
        <div class="ml-4 max-md:ml-0">
          <h4 class="text-xl font-semibold text-gray-800 mb-4 max-lg:text-base max-lg:mb-2">
            {section.name}
          </h4>
          <ul class="space-y-2">
            {section.items.map((item) => (
              <li class="max-lg:text-xs">
                <a href={item.href} class="text-gray-600 ">
                  {item.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</footer>
